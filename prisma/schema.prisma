generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PreferenceKind {
  GENRE
  DECADE
  MOOD
  ARTIST
}

model Household {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  createdAt   DateTime @default(now())

  preferences Preference[]
}

model User {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())

  profiles    Profile[]
  playEvents  PlayEvent[]
  preferences Preference[]
}

model Profile {
  id        String   @id @default(cuid())
  userId    String
  slug      String
  name      String
  createdAt DateTime @default(now())

  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  weights    PreferenceWeight[]
  playEvents PlayEvent[]

  @@unique([userId, slug])
}

model PreferenceWeight {
  id        String   @id @default(cuid())
  profileId String
  kind      PreferenceKind
  key       String
  weight    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, kind, key])
}

model PlayEvent {
  id          String   @id @default(cuid())
  userId      String
  profileId   String?

  speakerEntityId String
  uri         String
  title       String?
  artist      String?
  album       String?

  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile     Profile? @relation(fields: [profileId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([speakerEntityId, createdAt])
}

/// User or household music preference.
/// Stores likes/dislikes for tracks, artists, albums, genres, decades, years.
/// Score range: -1.0 (hate) to 1.0 (love), 0.0 = neutral
model Preference {
  id          String   @id @default(cuid())
  userId      String?
  householdId String?
  entityType  String   // track, artist, album, genre, decade, year
  entityId    String   // identifier for the entity
  score       Float    // -1.0 to 1.0
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  household Household? @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@unique([userId, entityType, entityId])
  @@unique([householdId, entityType, entityId])
  @@index([entityType, entityId])
}

/// Cached HA config entry for Music Assistant (or other integrations).
/// Used to avoid repeated API calls to discover entry IDs.
model HaConfigEntryCache {
  id        String   @id @default(cuid())
  domain    String
  entryId   String
  title     String?
  haUrl     String   // The HA instance URL this was discovered from
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([haUrl, domain, entryId])
  @@index([domain])
}
